<h1 align="center">СОТРУДНИКИ</h1>


<table align="center" border = "1" cellpadding="5" style="border-collapse: collapse; border: 1px solid black;">
	<tr  style="background-color: silver">
	    <th>Фамилия:</th>
	    <th>Имя:</th>
	    
	    <th colspan="3"></th>
	</tr>

	<% @people.each do |p|%>
		<tr>
			<td align="center"> <%=p.surname%> </td>
			<td> <%=p.name%> </td>
	
			<td> <%=link_to 'Просмотр', person_path(p)%> </td>
			<td> <%=link_to 'Изменить', edit_person_path(p)%> </td>
			<td> <%=link_to 'Удалить', person_path(p),
				method: :delete, data:{confirm: 'Подтвердить?'} %> </td>
		</tr>	
	<%end%>

</table>
<p align="center"><%= link_to '<- Новый сотрудник ->', new_person_path%></p>
