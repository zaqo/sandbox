<h1 align="center">ПОСТАВЩИКИ</h1>


<table align="center" border = "1" cellpadding="5" style="border-collapse: collapse; border: 1px solid black;">
	<tr  style="background-color: silver">
	    <th>Название:</th>
	    <th>Телефон:</th>
	    <th colspan="3"></th>
	</tr>

	<% @suppliers.each do |p|%>
		<tr>
			<td align="center"> <%=p.name%> </td>
		
			<td> <%=p.phone%> </td>
			<td> <%=link_to 'Просмотр', supplier_path(p)%> </td>
			<td> <%=link_to 'Изменить', edit_supplier_path(p)%> </td>
			<td> <%=link_to 'Удалить', supplier_path(p),
				method: :delete, data:{confirm: 'Подтвердить?'} %> </td>
		</tr>	
	<%end%>

</table>
<p align="center"><%= link_to '<- Новый поставщик ->', new_supplier_path%></p>
