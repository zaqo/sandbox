#encoding: CP1251
<%= form_for @supplier, url: suppliers_path do |f|%>

	<% if @supplier.errors.any? %>
		<div id="error_explanation">
		  <h2>
		   <%= pluralize(@supplier.errors.count,"error")%> необходимо устранить:
		  </h2>
			<ul>
				<% @supplier.errors.full_messages.each do |msg|%>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<div align="center">
	<p>
		<%= f.label "Название:" %><br>
		<%= f.text_field :name %>
		</p>
		<p>
		<%= f.label "Организационная форма:" %><br>
		<%= f.select(:structure, [['OOO',1],['ЗАО',2],['ОАО',3],['ИП',4],['Прочее',5]])%>	
	</p>
	<p>
		<%= f.label "ИНН:" %><br>
		<%= f.text_field :inn%>
	
	</p>
	<p>
		<%= f.label "Адрес:" %><br>
		<%= f.text_field :address%>
	
		</p>
		<p>
		<%= f.label "Телефон:" %><br>
		<%= f.text_field :phone%>
	
	</p>
	<p>
		<%= submit_tag("Ввод") %>
	</p>
<% end %>
</div>
