<h1 align="center">ПРИЧИНЫ ОСТАНОВОВ ЛИНИИ</h1>


<table align="center" border = "1" cellpadding="5" style="border-collapse: collapse; border: 1px solid black;">
	<tr  style="background-color: silver">
	    <th>id:</th>	
	    <th>Место:</th>
	    <th>Описание:</th>
	    <th colspan="3"></th>
	</tr>

	<% @shotdowntypes.each do |p|%>
		<tr>
			<td align="center"> <%=p.id%> </td>
			<td> <%=p.location%> </td>
			<td> <%=p.description%> </td>
			<td> <%=link_to 'Просмотр', shotdowntype_path(p)%> </td>
			<td> <%=link_to 'Изменить', edit_shotdowntype_path(p)%> </td>
			<td> <%=link_to 'Удалить', shotdowntype_path(p),
				method: :delete, data:{confirm: 'Подтвердить?'} %> </td>
		</tr>	
	<%end%>

</table>
