		<td>	
			<%= f.label "Дата" %><br>
			<%= f.date_select(:date)%>
		</td>
	</tr>

	<tr>
		<td>	
			<%= f.label "Начальник смены" %><br>
			<%# men_array = Person.all.map{|p| [p.surname,p.id]} %>
